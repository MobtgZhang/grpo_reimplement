{
    "bf16": {
        "enabled": true
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 7e-5,
            "betas": [
                0.98,
                0.999
            ],
            "eps": 1e-09
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 1e-6,
            "warmup_max_lr": 1e-4,
            "warmup_num_steps": 800
        }
    },
    "zero_optimization": {
        "stage": 1,
        "allgather_partitions": true,
        "allgather_bucket_size": 200000000.0,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 200000000.0,
        "contiguous_gradients": true,
        "stage3_gather_16bit_weights_on_model_save": true,
        "offload_optimizer": {
            "device": "cpu"
        }
    },
    "gradient_accumulation_steps": 80,
    "train_micro_batch_size_per_gpu": 2,
    "wall_clock_breakdown": false,
    "steps_per_print": 100
}